<Page
    x:Class="T1904EHelloUWP.Profile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:T1904EHelloUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Horizontal" Padding="10">
        <Image x:Name="Avatar" HorizontalAlignment="Left" VerticalAlignment="Top" Height="200"  Width="200"/>
        <StackPanel Margin="10">
            <TextBlock Margin="3" x:Name="FirstName"/>
            <TextBlock Margin="3" x:Name="LastName" />
            <TextBlock Margin="3" x:Name="Email" />
            <TextBlock Margin="3" x:Name="Phone" />
            <TextBlock Margin="3" x:Name="Address"/>
            <TextBlock Margin="3" x:Name="Gender"/>
            <TextBlock Margin="3" x:Name="Birthday" />
            <TextBlock Margin="3" x:Name="CreatedAt" />
            <TextBlock Margin="3" x:Name="Introduction" />
        </StackPanel>
    </StackPanel>
</Page>
