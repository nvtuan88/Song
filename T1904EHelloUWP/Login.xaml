<Page
    x:Class="T1904EHelloUWP.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:T1904EHelloUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="50">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock>Login Form</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock>User Name</TextBlock>
            <TextBox Margin="10" PlaceholderText="Email" HorizontalAlignment="Left" x:Name="email" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock>PassWord</TextBlock>
            <TextBox Margin="10" PlaceholderText="Password" HorizontalAlignment="Left" x:Name="password" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="10" Content="Login" Click="Button_Click_Login"/>
            <Button Margin="10" Content="Reset" Click="Button_Click_Reset"/>
        </StackPanel>
    </StackPanel>
</Page>
