<Page
    x:Class="T1904EHelloUWP.Screen.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:T1904EHelloUWP.Screen"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="50" Padding="10">
        <StackPanel Margin="0 0 0 20" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock FontWeight="ExtraBold">Login Form</TextBlock>
        </StackPanel>
        <StackPanel Margin="0 0 0 20" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Margin="0 0 20 0">Username</TextBlock>
            <TextBox x:ConnectionId='5' Width="200" x:Name="Username"></TextBox>
        </StackPanel>
        <StackPanel Margin="0 0 0 20" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Margin="0 0 20 0">Password</TextBlock>
            <PasswordBox x:ConnectionId='4' Width="200" x:Name="Password"></PasswordBox>
        </StackPanel>
        <StackPanel Margin="0 0 0 20" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:ConnectionId='2'                  Margin="0 0 20 0">Login</Button>
            <Button x:ConnectionId='3'                 >Reset</Button>
        </StackPanel>
    </StackPanel>
</Page>

