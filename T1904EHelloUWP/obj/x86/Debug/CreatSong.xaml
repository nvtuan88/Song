<Page
    x:Class="T1904EHelloUWP.CreatSong"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:T1904EHelloUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="50">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock>Song Form</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock>Name Song</TextBlock>
            <TextBox x:ConnectionId='8' Margin="10" PlaceholderText="Name" HorizontalAlignment="Left" x:Name="name" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock>Ca sĩ</TextBlock>
            <TextBox x:ConnectionId='7' Margin="10" PlaceholderText="Singer" HorizontalAlignment="Left" x:Name="singer" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock>Tác giả</TextBlock>
            <TextBox x:ConnectionId='6' Margin="10" PlaceholderText="Author" HorizontalAlignment="Left" x:Name="author" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock>Ảnh</TextBlock>
            <TextBox x:ConnectionId='5' Margin="10" PlaceholderText="Thumnail" HorizontalAlignment="Left" x:Name="thumbnail" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock>Link</TextBlock>
            <TextBox x:ConnectionId='4' Margin="10" PlaceholderText="Link" HorizontalAlignment="Left" x:Name="link" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:ConnectionId='2' Margin="10" Content="Save"                          />
            <Button x:ConnectionId='3' Margin="10" Content="Reset"                           />
        </StackPanel>
    </StackPanel>
</Page>

