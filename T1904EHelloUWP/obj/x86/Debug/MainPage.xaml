<Page
    x:Class="T1904EHelloUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:T1904EHelloUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="50">
        <TextBox x:ConnectionId='2' Margin="10" PlaceholderText="FirstName" HorizontalAlignment="Left" x:Name="firstName" Width="200"></TextBox>
        <TextBox x:ConnectionId='3' Margin="10" PlaceholderText="LastName" HorizontalAlignment="Left" x:Name="lastName" Width="200"></TextBox>
        <TextBox x:ConnectionId='4' Margin="10" PlaceholderText="Password" HorizontalAlignment="Left" x:Name="password" Width="200"></TextBox>
        <TextBox x:ConnectionId='5' Margin="10" PlaceholderText="Address" HorizontalAlignment="Left" x:Name="address" Width="200"></TextBox>
        <TextBox x:ConnectionId='6' Margin="10" PlaceholderText="Phone" HorizontalAlignment="Left" x:Name="phone" Width="200"></TextBox>
        <Button x:ConnectionId='7'                            >Upload image</Button>
        <Image x:ConnectionId='8' x:Name="avatar" Width="200" Height="200" Visibility="Collapsed"/>
        <TextBox x:ConnectionId='9' Margin="10" PlaceholderText="Gender" HorizontalAlignment="Left" x:Name="gender" Width="200"></TextBox>
        <TextBox x:ConnectionId='10' Margin="10" PlaceholderText="Email" HorizontalAlignment="Left" x:Name="email" Width="200"></TextBox>
        <TextBox x:ConnectionId='11' Margin="10" PlaceholderText="Birthday" HorizontalAlignment="Left" x:Name="birthday" Width="200"></TextBox>

        <StackPanel Orientation="Horizontal">
            <Button x:ConnectionId='12' Margin="10" Content="Save"                          />
            <Button x:ConnectionId='13' Margin="10" Content="Reset"                           />
        </StackPanel>
    </StackPanel>
</Page>

